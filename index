<script>
    const canvas = document.getElementById('myCanvas');
    const ctx = canvas.getContext('2d');

    // --- PASTE KODE BASE64 BACKGROUND DI SINI ---
    const backgroundBase64 = "data:image/jpeg;base64,..."; // Biarkan kosong/isi dengan kodemu
    
    let bgImg = new Image(); bgImg.src = backgroundBase64;
    let foodImg = new Image(); let foodLoaded = false; let bgLoaded = false;
    let stickers = []; let selectedStickerIndex = -1;
    
    let textObjects = [
        { id: 'dateText', text: 'Jumat, 9 Januari 2026', x: 1020, y: 250, font: "600 24px 'Poppins'", align: 'right', color: '#1E293B', stroke: false },
        { id: 'menu1', text: 'Ayam Bakar Madu', x: 540, y: 280, font: "400 38px 'Pacifico'", align: 'center', color: '#2563EB', stroke: true },
        { id: 'menu2', text: 'Tahu Goreng', x: 180, y: 380, font: "600 22px 'Poppins'", align: 'center', color: '#1E293B', stroke: false },
        { id: 'menu3', text: 'Lalapan', x: 900, y: 380, font: "600 22px 'Poppins'", align: 'center', color: '#1E293B', stroke: false },
        { id: 'menu4', text: 'Anggur Merah', x: 180, y: 580, font: "600 22px 'Poppins'", align: 'center', color: '#1E293B', stroke: false },
        { id: 'menu5', text: 'Nasi Putih', x: 900, y: 580, font: "600 22px 'Poppins'", align: 'center', color: '#1E293B', stroke: false },
        { id: 'tiktok', text: 'TikTok: @SppgPanjatan002', x: 540, y: 1040, font: "600 20px 'Poppins'", align: 'center', color: '#64748B', stroke: false }
    ];

    let isDragging = false, dragType = null, dragIndex = -1;

    document.fonts.ready.then(() => draw());
    bgImg.onload = () => { bgLoaded = true; draw(); }

    document.getElementById('foodInput').addEventListener('change', function(e) {
        if (!e.target.files[0]) return;
        const reader = new FileReader();
        reader.onload = function(event){ foodImg.src = event.target.result; foodImg.onload = () => { foodLoaded = true; draw(); } }
        reader.readAsDataURL(e.target.files[0]);
    });

    // Fitur Stiker & Eraser tetap berjalan sama...
    // (Aku ringkas bagian ini agar fokus ke fitur baru, logika stiker lamamu tetap jalan)
    window.updateText = function(id, idx) { textObjects[idx].text = document.getElementById(id).value; draw(); }

    // --- DRAW UTAMA ---
    function draw() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        
        // 1. BG
        if (bgLoaded && backgroundBase64.length > 100) ctx.drawImage(bgImg, 0, 0, 1080, 1080);
        else { ctx.fillStyle = "#F8FAFC"; ctx.fillRect(0,0,1080,1080); }

        // 2. Food dengan Shadow Modern
        if (foodLoaded) {
            const fx=280, fy=300, fw=520, fh=360;
            ctx.shadowColor = 'rgba(0, 0, 0, 0.15)'; ctx.shadowBlur = 30; ctx.shadowOffsetY = 15;
            ctx.save(); ctx.beginPath(); ctx.roundRect(fx, fy, fw, fh, 30); ctx.clip();
            ctx.drawImage(foodImg, fx, fy, fw, fh); ctx.restore();
            ctx.shadowColor = 'transparent'; // Reset
            ctx.lineWidth=8; ctx.strokeStyle="#ffffff"; ctx.strokeRect(fx, fy, fw, fh);
        }

        // 3. TABEL GIZI (PROGRESS BAR PERSEGI PANJANG)
        drawNutritionBars();

        // 4. Texts
        textObjects.forEach(obj => {
            ctx.font = obj.font; ctx.textAlign = obj.align;
            if(obj.stroke) { ctx.lineWidth=6; ctx.strokeStyle="white"; ctx.strokeText(obj.text, obj.x, obj.y); }
            ctx.fillStyle = obj.color; ctx.fillText(obj.text, obj.x, obj.y);
        });
    }

    // --- FITUR BARU: VISUALISASI PROGRESS BAR ---
    function drawNutritionBars() {
        let k_e = document.getElementById('k_energi').value || 0; let k_p = document.getElementById('k_protein').value || 0; let k_l = document.getElementById('k_lemak').value || 0; let k_k = document.getElementById('k_karbo').value || 0;
        let b_e = document.getElementById('b_energi').value || 0; let b_p = document.getElementById('b_protein').value || 0; let b_l = document.getElementById('b_lemak').value || 0; let b_k = document.getElementById('b_karbo').value || 0;

        ctx.fillStyle = "#2563EB"; ctx.beginPath(); ctx.roundRect(340, 700, 400, 50, 25); ctx.fill();
        ctx.fillStyle = "white"; ctx.font = "700 24px 'Poppins'"; ctx.textAlign = "center";
        ctx.fillText("üìä KANDUNGAN GIZI (Klik Disini)", 540, 734);

        function renderBar(x, y, label, val, maxVal, color) {
            let pct = Math.min((val / maxVal), 1);
            let barWidth = 320; let currentWidth = barWidth * pct;
            
            // Label Teks
            ctx.fillStyle = "#1E293B"; ctx.font = "600 16px 'Poppins'"; ctx.textAlign = "left";
            ctx.fillText(`${label} : ${val}`,
